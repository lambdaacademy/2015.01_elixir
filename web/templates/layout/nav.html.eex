<div class="header">
  <div class="row">
    <div class="col-md-4 col-xs-6 col-sm-6">
    <h1>
      <a href="<%= Router.Helpers.root_path(@conn, :index) %>">
        <img class="lambda-logo" src="/images/lambda_days_logo2.png">
      </a>
    </h1>
  </div>
  <div class="col-md-8 col-xs-6 col-sm-6">
    <ul class="nav nav-pills pull-right" id="nav">
      <li>
        <a href="<%= Router.Helpers.root_path(@conn, :index) %>">Dashboard</a>
      </li>
      <%= if !@user do %>
      <li>
        <a href="<%= Router.Helpers.signin_path(@conn, :signin) %>"> Sign In </a>
      </li>
      <%= else %>
      <li>
        <a style="text-transform: none;" href="<%= Router.Helpers.user_path(@conn, :show, @user.id) %>"><%= @user[:email] %></a>
        <div class="user-email"></div>
      </li>
      <%= if @user.admin do %>
      <li>
        <a href="<%= Router.Helpers.talk_path(@conn, :index) %>">Talks</a>
      </li>
      <li>
        <a href="<%= Router.Helpers.user_path(@conn, :index) %>"> Users </a>
      </li>
      <%= end %>
      <li>
        <a href="<%= Router.Helpers.logout_path(@conn, :logout) %>">Logout</a>
      </li>
      <%= end %>
    </ul>
  </div>
  </div>
</div>
